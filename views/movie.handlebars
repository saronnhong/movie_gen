<div class="signup mx-auto">
	<div class="row">
		<div class="col-md-12">
			<h1>MOVIE GEN</h1>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12">
			<form id="user-sign-up">
				<div class="form-group">
					<input type="search" name="search" class="form-control" id="search" placeholder="Enter Key">
				</div>
				<button type="search" class="btn btn-danger">Search</button>
			</form>
		</div>
	</div>
</div>

<div class="row" id="movies-container">
	<!--movie box -->

	<div class="col-lg-2 col-md-3 col-sm-6 col-xs-12" id="movie-box">
		<div class="box gallery">
			<div class="card">
				<img class="img-responsive" id="new-movies" src={{this.moviePoster}}>
				<a onClick="modalDisplay({{@index}})" href="#" class="overlay link" id="trigger-modal{{@index}}"></a>
				<div class="info">
					<div class="foot">
						<p class="movie-title">{{this.movieName}}</p>
						<i class="line"></i>
						<p class="runtime">{{this.movieTime}}</p>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="myModal{{@index}}" class="modal">

		<!-- Modal content -->
		<div class="modal-content">

			<div class="row" id="modal-body">
				<!--poster -->
				<div class="col-5" id="search-movie">
					<img id="selected-movie-poster" src={{this.moviePoster}}>
				</div>

				<div class="col-7" id="movie-scroll">
					<!--close BTN -->
					<span id='closeit{{@index}}' class="close">&times;</span>

					<div class="container" id="modal-movie-info-box">
						<!--Movie Title -->
						<h2 class="movie-title" id="modal-movie-title">{{this.movieName}}</h2>
						<!--Year, Runtime & Genre -->
						<div class="row" id="YRG-box">
							<div class="col-2" id="year">
								<h5>{{this.moviYear}}</h5>
							</div>
							<div class="col-2" id="runtime">
								<h5>{{this.movieTime}}</h5>
							</div>
							<div class="col-6" id="genre">
								<h5>{{this.movieGenre}}</h5>
							</div>
						</div>
						<!--Raitings -->
						<div class="row" id="raitings">
							<div class="col-3" id="raiting-imdb">
								<h6 class="imdb-text">{{this.movieRatingImdb}}</h6>
							</div>
							<div class="col-4" id="raiting-roten">
								<h6 class="roten-text">{{this.movieRatingRotten}}</h6>
							</div>
						</div>
						<!--Director-->
						<div class="row">
							<div class="col-10" id="director">
								<p><strong>Directed by: </strong>{{this.movieDirector}}</p>
							</div>
						</div>
						<!--Cast -->
						<div class="row">
							<div class="col-10" id="cast">
								<p><strong>Starring: </strong>{{this.movieActors}}</p>
							</div>
						</div>
						<!--Plot -->
						<div class="row">
							<div class="col-10" id="plot">
								<p><strong>Plot: </strong>{{this.moviePlot}}</p>
							</div>
						</div>
						<!--Watched movies BTN -->
						<div class="row">
							<div class="col-md-3">
								<form action="/api/new/watched/{{this.id}}?_method=PUT" method="POST">
									<input type="hidden" name="watched" value="true">
									<button type="submit"></button>
								</form>
							</div>
							<!-- Remove movie button -->

							<div class="col-md-3">
								<form action="/api/new/delete/{{this.id}}?_method=DELETE" method="POST">
									<input type="hidden" name="watched" value="true">
									<button type="submit"></button>
								</form>
							</div>
							<div class="col-md-6"></div>
						</div>


						<!-- trailer -->

						<iframe id="trailer-box" src="https://www.youtube.com/embed/{{this.movieTrailer}}"
							frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>


					</div>

				</div>

			</div>
		</div>

	</div>

</div>