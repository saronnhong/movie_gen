                        <option id="comedy" name="genre" value="comedy">Comedy</option>
                        <option id="crime" name="genre" value="crime">Crime</option>
                        <option id="documentary" name="genre" value="documentary">Documentary</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="question2">Favorite genre from these?</label>
                    <select class="form-control" id="question2">
                        <option id="drama" name="genre" value="drama">Drama</option>
                        <option id="family" name="genre" value="family">Family</option>
                        <option id="fantasy" name="genre" value="fantasy">Fantasy</option>
                        <option id="history" name="genre" value="history">History</option>
                        <option id="horror" name="genre" value="horror">Horror</option>
                        <option id="music" name="genre" value="music">Music</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="question3">Favorite genre from these?</label>
                    <select class="form-control" id="question3">
                        <option id="mystery" name="genre" value="mystery">Mystery</option>
                        <option id="romance" name="genre" value="romance">Romance</option>
                        <option id="sciencefiction" name="genre" value="sciencefiction">Science Fiction</option>
                        <option id="tvmovie" name="genre" value="tvmovie">Tv Movie</option>
