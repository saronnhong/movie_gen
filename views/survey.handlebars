                        <option id="war" name="genre" value="war">War</option>
                        <option id="western" name="genre" value="western">Western</option>
                    </select>
                </div>
            <button type="submit" class="btn btn-danger">Submit</button>
            </form>
        </div>
    </div>
</div>

